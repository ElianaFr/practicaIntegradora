<div class="containerTit">
    <h1 class="tit">
    LISTADO DE PRODUCTOS
    </h1>
</div>
<div class="container">
{{#each payload}}

    <div class="containerCard">
        <div class="card">
            <img src="{{this.thumbnail}}">
            <p class="title">{{this.title}}</p>
            {{!-- <p >{{this.description}}</p>
            <p>CODIGO: {{this.code}}</p>
            <p>STOCK: {{this.stock}}</pass=> --}}
            <p class="price">PRECIO: $ {{this.price}}</p>
            {{!-- <p>ID: {{this.id}}</p> --}}
            <button class="button btnAdd" onclick="addToCart(`{{this._id}}`)">ADD</button>
            <button class="button btnInfo" >+ INFO</button>
            
        </div>
    </div>

{{/each}}

</div>

    
<div>
    {{#if prevLink}}
        <a href="{{prevLink}}">Anterior</a>
    {{/if}}

    {{#if nextLink}}
        <a href="{{nextLink}}">Siguiente</a>
    {{/if}}
    
</div>

    
<script src="/js/home.js"></script> 