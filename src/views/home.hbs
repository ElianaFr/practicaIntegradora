<div class="containerTit">
    <h1 class="tit">
    LISTADO DE PRODUCTOS
    </h1>
</div>
<h2>Categor√≠as</h2>
<ul>
    <li><a href="/">Todos los productos</a></li>
    <li><a href="/?category=mujer">Mujer</a></li>
    <li><a href="/?category=hombre">Hombre</a></li>
    <li><a href="/?category=unisex">Unisex</a></li>
    
</ul>
<div class="container">
{{#each payload}}

    <div class="containerCard">
        <div class="card">
            <img src="{{this.thumbnail}}">
            <p class="title">{{this.title}}</p>
            <p class="price">PRECIO: $ {{this.price}}</p>
            <button class="button btnAdd" onclick="addToCart(`{{this._id}}`)">ADD</button>
            <button class="button btnInfo" href="/:prodId" onclick="{{this._id}}" >+ INFO</button>
            
        </div>
    </div>

{{/each}}

</div>

    
<div>
    {{#if prevLink}}
        <a href="{{prevLink}}">Anterior</a>
    {{/if}}

    {{#if nextLink}}
        <a href="{{nextLink}}">Siguiente</a>
    {{/if}}
    
</div>

    
